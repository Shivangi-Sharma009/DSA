#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int stack[MAX],top=-1;
int isEmpty(){
    return top==-1;
}
int isFull(){
    return top == MAX-1;
}
void push(int value){
    if(isFull())
    printf("\nStack overflow. Cannot push element into stack.\n");
    else{
        stack[++top]=value;
        printf("\nPushed %d into the stack.\n",value);
    }
}
int pop(){
    if(isEmpty()){
        printf("\nStack underflow. Cannot pop element into stack.\n");
        return -1;
    }
    else{
        int val =stack[top];
        top--;
        return val;
    }
}
int peek(){
    if(isEmpty()){
        printf("\nStack underflow. Cannot peek element into stack.\n");
        return -1;
    }
    else{
        int val =stack[top];
        top--;
        return val;
    }
}
void show(){
    if(isEmpty())
    printf("\nStack is empty!!!\n");
    else{
        printf("\nStack Elements are: \n");
        for(int i=top;i>=0;i--){
            printf("%d\n",stack[i]);
        }
    }
}
int main(){
    int choice,val,res;
    while(1){
        printf("1. Push\n");
        printf("1. Pop\n");
        printf("1. Peek\n");
        printf("1. Display\n");
        printf("1. EXIT\n");
        printf("Enter Choice: ");
        scanf("%d", &choice);
        switch(choice){
            case 1:
            printf("Enter Value: ");
            scanf("%d",&val);
            push(val);
            break;
             case 2:
             res = pop();
             if(res!=-1)
             printf("\n%d pop from stack\n",res);
            break;
             case 3:
             res=peek();
             if(res!=-1)
             printf("\n%d available at top of stack\n");
            break;
             case 4:
             show();
            break;
             case 5:
             exit(0);
            break;
            default:
            printf("\nInvalid Choice!!!\n");
        }
        printf("\n");
    }
    return 0;
}
